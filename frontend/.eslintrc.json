{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "require-jsdoc" : 0,
        "object-curly-spacing": ["error", "always"],
        "max-len": ["error", 120],
        "react/jsx-curly-spacing": [
            2,
            {
                "when": "always",
                "allowMultiline": false,
                "children": true
            }
        ]
    }
}
